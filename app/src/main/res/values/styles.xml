<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- other styles -->
        <item name="android:windowAnimationStyle">@style/FadeTransition</item>
    </style>

    <!-- Custom shape for ShapeableImageView with rounded corners -->
    <style name="CustomShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Set your desired corner radius -->
    </style>

    <!-- Transition animation style -->
    <style name="FadeTransition">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
